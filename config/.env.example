# =============================================================================
# QuranBot Environment Configuration Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real values to version control!

# Discord Bot Configuration
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# Discord Channel IDs (Get these from your Discord server)
TARGET_CHANNEL_ID=123456789012345678
PANEL_CHANNEL_ID=123456789012345678
LOGS_CHANNEL_ID=123456789012345678
DAILY_VERSE_CHANNEL_ID=123456789012345678
PANEL_ACCESS_ROLE_ID=123456789012345678

# Admin User IDs (comma-separated if multiple)
ADMIN_USER_ID=123456789012345678

# Guild ID (Discord Server ID where the bot operates)
GUILD_ID=123456789012345678

# Developer ID
DEVELOPER_ID=123456789012345678

# Audio Configuration
AUDIO_FOLDER=audio
DEFAULT_RECITER=Saad Al Ghamdi
AUDIO_QUALITY=128k
DEFAULT_SHUFFLE=false
DEFAULT_LOOP=false

# FFmpeg Configuration
# Linux/VPS: /usr/bin/ffmpeg
# macOS (Homebrew): /opt/homebrew/bin/ffmpeg
# Windows: C:/ffmpeg/bin/ffmpeg.exe
FFMPEG_PATH=/usr/bin/ffmpeg

# VPS Configuration (optional)
VPS_HOST=user@your-vps-ip

# Discord Logging Configuration
USE_WEBHOOK_LOGGING=true
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
# Set to false to use bot-based logging (old method)
# Set to true to use webhook-based logging (recommended for better reliability)

# Security Configuration
RATE_LIMIT_PER_MINUTE=10

# Performance Configuration
CACHE_TTL=300
MAX_CONCURRENT_AUDIO=1
BACKUP_INTERVAL_HOURS=24

# Logging Configuration
LOG_LEVEL=INFO

# Environment (development/production)
ENVIRONMENT=production

# OpenAI API Configuration (for Islamic AI Assistant)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
